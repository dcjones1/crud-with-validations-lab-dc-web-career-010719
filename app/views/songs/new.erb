<%= form_for @song do |f| %>
<%= f.label :title %><br>
<%= f.text_field :title %><br>
<%= f.label :released %><br>
<%= f.select :released, [['Yes', true],['No', false]] %><br>
<%= f.label :release_year %><br>
<%= f.select :release_year, (Time.now.year).downto(Time.now.year - 69).to_a, { include_blank: "Choose the release year or skip if not released" }, id: 'song_release_year' %><br>
<%= f.label :artist_name %><br>
<%= f.text_field :artist_name %><br>
<%= f.label :genre %><br>
<%= f.text_field :genre %><br>
<%= f.submit %>
<% end %>
